[user]
    name = JesusMtnez
    email = jesusmartinez93@gmail.com
    signingkey = D54244C88732F2A1
[core]
    editor = emacs -nw
    autocrlf = input
    whitespace = trailing-space, blank-at-eol, tabs-in-indent
[commit]
    gpgsign = true
[pull]
    ff = only
[push]
    default = upstream
[fetch]
    prune = true
[color]
    ui = auto
[alias]
    s = status
    sa = status --ignored
    co = checkout
    a = add
    aa = add --all
    ap = add --patch
    c = commit --verbose
    ca = commit -a
    cm = commit -m
    cma = commit -a -m
    cam = commit --amend
    camn = commit --amend --no-edit
    ps = push
    psf = push --force-with-lease
    pl = pull
    plp = pull --prune
    cl = clone
    clr = clone --recursive
    t = tag
    ra = remote add
    rr = remote rm
    rp = remote prune
    rpo = remote prune origin
    b = branch
    br = branch -r
    ba = branch -a
    bu = branch -u
    l = log -2
    t = log --graph --pretty=format:'%C(yellow)%h%Creset%C(auto)%d%Creset %s %Cblue<%an>%Creset %Cgreen(%cr)%Creset' --abbrev-commit --all
    d = diff
    dc = diff --cached
    df = "!f() { git --no-pager diff $@; }; f"
    dfc = "!f() { git --no-pager diff --cached $@; }; f"
    f = fetch
    fa = fetch --all
    m = merge
    su = submodule foreach git pull origin master
    patch = !git --no-pager diff --no-color
[pager]
    diff = diff-so-fancy | less --tabs=4 -RFX
    show = diff-so-fancy | less --tabs=4 -RFX
[includeIf "gitdir:~/workspaces/"]
    path = ~/workspaces/.gitconfig
